LIBPATH =  "-L/usr/lib "

INCLUDES = "-I/usr/include -I/usr/lib/ruby/1.8/i486-linux -I/usr/local/lib/site_ruby/1.8 -I."

LIBS = "-lpthread -lrt -ldl -lcrypt -lm"

