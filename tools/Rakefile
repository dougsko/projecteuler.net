  sh "#{LDSHARED} #{LIBPATH} -o pemethods.so #{OBJ} #{ADDITIONAL_OBJECTS} #{LIBS} #{LIBRUBYARG_SHARED}"
end

desc "Install this extension"
task :install => 'pemethods.so' do
  makedirs "#{RUBYARCHDIR}"
  install "pemethods.so", "#{RUBYARCHDIR}"
